<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.mapper.OPstudent">
	
	<select id="getstudnetInfo" parameterType="java.lang.String"
		resultType="com.example.demo.VO.VOStudent">
		SELECT
		stu.id,
		stu.name,
		stu.age,
		stu.sex
		FROM student stu
		WHERE
		stu.name = #{name}
	</select>
	
	<insert id="addstudent" resultType="java.lang.Integer" parameterType="com.example.demo.VO.VOStudent" >
		insert into student (id, name, age, sex)
    	values (#{id,jdbcType=INTEGER}, #{name,jdbcType=VARCHAR}, #{age,jdbcType=INTEGER}, #{sex,jdbcType=VARCHAR}) 
	</insert>
	
	
	<update id="updatestudent" resultType="java.lang.Integer" parameterType="com.example.demo.VO.VOStudent"  >
    update student
    <set >
      <if test="name != null" >
        name = #{name,jdbcType=VARCHAR},
      </if>
      <if test="age != null" >
        age = #{age,jdbcType=INTEGER},
      </if>
      <if test="sex != null" >
        sex = #{sex,jdbcType=VARCHAR},
      </if>
    </set>
       where id = #{id,jdbcType=INTEGER}
    </update>
    
    
  
  	<delete id="delstudent" resultType="java.lang.Integer" parameterType="java.lang.Integer"  >
    	delete from student
    	where id = #{id,jdbcType=INTEGER}
  	</delete>
	
	
</mapper>